<div class="container">
    <div class="row">
        <h2>eat da burger!</h2>
        <hr>
    </div>
    <div class="row">
        <div class="col-md-7">
            <div class="brgs">
                {{#each burgers}}
                {{#unless this.devoured}}
                <div>
                    {{this.burger_name}}
                    <form action="/burgers/{{this.id}}" method="PUT">
                <input type="hidden" name="devoured" value="false">
                <button class="btn btn-warning" type="submit">Eat Me!</button>
            </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class="col-md-7">
            <h3>Yummy Burgers!</h3>
            <div class="dvrd">
                {{#each burgers}}
                {{#if this.devoured}}
                <div class='eaten'>
                    <div>
                    {{this.burger_name}}
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>
    <div class="row">
        <h2>Add a Burger</h2>
    </div>

    <div class="row">
        <div class="col s12">
            <form action="/burgers" method="POST">
                <input type="text" id="name" name="burger_name" placeholder="Delicious Burger">
                <button type="submit" class="addBurgerButton">Add The Burger</button>
            </form>
        </div>
    </div>
</div>